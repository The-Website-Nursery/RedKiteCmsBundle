<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
        
    <route id="_user_list" pattern="/{_locale}/al_userList">
        <default key="_controller">AlphaLemonCmsBundle:AlUser:list</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_show_user" pattern="/{_locale}/al_showUser">
        <default key="_controller">AlphaLemonCmsBundle:AlUser:showUser</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_save_user" pattern="/{_locale}/al_saveUser">
        <default key="_controller">AlphaLemonCmsBundle:AlUser:saveUser</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_delete_user" pattern="/{_locale}/al_deleteUser">
        <default key="_controller">AlphaLemonCmsBundle:AlUser:deleteUser</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_roles_list" pattern="/{_locale}/al_rolesList">
        <default key="_controller">AlphaLemonCmsBundle:AlUser:list</default>
        <default key="_locale">en</default>
    </route>
</routes>
